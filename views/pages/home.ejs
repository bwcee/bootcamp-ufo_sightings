<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../template/head'); %>
</head>

<body class="container">
  <header>
    <%- include('../template/nav'); %>
  </header>

  <main>
    <div class="jumbotron">
      <h1>Welcome to UFO Sightings R'Us</h1>
      <p class="lead">If it ain't here, it ain't exist</p>
    </div>

    <div id="center-content">

      <form id="sort-section">

        <select name="sighting" id="sort-options">
          <option value="shape">
            shape
          </option>
          <option value="city">
            city
          </option>
          <option value="state">
            state
          </option>
          <option value="date_time">
            Date/ Time
          </option>
        </select>
        <button class="btn btn-outline-secondary btn-sm" input type="submit" id="sort-button">Sort</button>
      </form>

    </div>


    </div>
    <div class="container-fluid" id="sighting-content">

      <div class="table-responsive">
        <table class="table table-hover">

          <tr class="bg-success">
            <th>Date/ Time</th>
            <th class="d-none d-sm-table-cell">Shape</th>
            <th class="d-none d-sm-table-cell">City</th>
            <th>State</th>
            <th id="delete-heading">Delete</th>
          </tr>
          <% sightingsArr.forEach((el, index)=> { %>
            <tr class="clickable" onclick="window.location='/sighting/<%= index %>'">
              <td>
                <%= el.date_time %>
              </td>
              <td>
                <%= el.shape %>
              </td>
              <td>
                <%= el.city %>
              </td>
              <td>
                <%= el.state %>
              </td>
              <td>
                <form action="/sighting/delete/<%= index %>?_method=DELETE" method="POST">
                  <input class="btn btn-danger btn-sm" type="submit" value="Delete" />
                </form>
              </td>
            </tr>
            <% }) %>
        </table>
      </div>
  </main>


  <footer>
    <%- include('../template/footer'); %>
  </footer>
</body>

</html>